# Zalo OA Configuration
# Thay thế bằng token thật từ Zalo Developer Console
ZALO_ACCESS_TOKEN=your_zalo_access_token_here

# Zalo App Secret (cần thiết để lấy access token)
ZALO_APP_SECRET=your_zalo_app_secret_here

# Zalo OA ID (đã được cấu hình sẵn)
# ZALO_OA_ID=3416749500273400315

# Cấu hình khác (tùy chọn)
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# ADMIN_EMAIL=admin@yourdomain.com
# FROM_EMAIL=noreply@yourdomain.com

# Gmail Configuration
# Tạo App Password từ: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-16-digit-app-password

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Database (for future use)
# DATABASE_URL=your_database_connection_string

# Optional: SMS Service (for future use)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number 